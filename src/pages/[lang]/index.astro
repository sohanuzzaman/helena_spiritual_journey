---
import BaseLayout from "../../layouts/BaseLayout.astro";
import SparkleCanvas from "../../components/SparkleCanvas.astro";
import SacredGeometry from "../../components/SacredGeometry.astro";
import HeroSection from "../../components/sections/HeroSection.astro";
import PilgrimageSection from "../../components/sections/PilgrimageSection.astro";
import CrystalInterlude from "../../components/sections/CrystalInterlude.astro";
import SacredCircleSection from "../../components/sections/SacredCircleSection.astro";
import ConsciousnessSection from "../../components/sections/ConsciousnessSection.astro";
import SacredDestinationsSection from "../../components/sections/SacredDestinationsSection.astro";
import CeremonySection from "../../components/sections/CeremonySection.astro";
import PastJourneysSection from "../../components/sections/PastJourneysSection.astro";
import MonthlyCircleSection from "../../components/sections/MonthlyCircleSection.astro";
import JoinInPersonSection from "../../components/sections/JoinInPersonSection.astro";
import FinalCTASection from "../../components/sections/FinalCTASection.astro";
import { locales, type Locale } from "../../i18n/ui";
import { t } from "../../i18n/ui";
import en from "../../i18n/translations/en.json";
import cs from "../../i18n/translations/cs.json";

export function getStaticPaths() {
  return [
    { params: { lang: "en" } },
    { params: { lang: "cs" } },
  ];
}

const lang = Astro.params.lang as Locale;
const translations: Record<Locale, Record<string, string>> = { en, cs };
const tr = translations[lang];
---

<BaseLayout
  title={t(tr, "META_PAGE_TITLE")}
  description={t(tr, "META_PAGE_DESCRIPTION")}
  lang={lang}
  skipToContent={t(tr, "SKIP_TO_CONTENT")}
  footerCopyright={t(tr, "FOOTER_COPYRIGHT")}
  skipToContentKey="SKIP_TO_CONTENT"
  footerCopyrightKey="FOOTER_COPYRIGHT"
>
  <SacredGeometry />
  <SparkleCanvas />

  <HeroSection
    label={t(tr, "HERO_LABEL")}
    labelKey="HERO_LABEL"
    headline={t(tr, "HERO_HEADLINE")}
    headlineKey="HERO_HEADLINE"
    subheadline={t(tr, "HERO_SUBHEADLINE")}
    subheadlineKey="HERO_SUBHEADLINE"
    ctaText={t(tr, "CTA_SUBSCRIBE")}
    ctaTextKey="CTA_SUBSCRIBE"
  />

  <PilgrimageSection
    label={t(tr, "PILGRIMAGE_LABEL")}
    labelKey="PILGRIMAGE_LABEL"
    title={t(tr, "PILGRIMAGE_TITLE")}
    titleKey="PILGRIMAGE_TITLE"
    body1={t(tr, "PILGRIMAGE_BODY_1")}
    body1Key="PILGRIMAGE_BODY_1"
    body2={t(tr, "PILGRIMAGE_BODY_2")}
    body2Key="PILGRIMAGE_BODY_2"
    body3={t(tr, "PILGRIMAGE_BODY_3")}
    body3Key="PILGRIMAGE_BODY_3"
  />

  <CrystalInterlude
    imageSrc="/helena-white-dress-amethyst-crystal-ocean-beach.jpg"
    objectPosition="center 35%"
    blendTopColor="depth"
    blendBottomColor="abyss"
  />

  <SacredCircleSection
    label={t(tr, "SACRED_CIRCLE_LABEL")}
    labelKey="SACRED_CIRCLE_LABEL"
    title={t(tr, "SACRED_CIRCLE_TITLE")}
    titleKey="SACRED_CIRCLE_TITLE"
    card1Title={t(tr, "SACRED_CIRCLE_CARD_1_TITLE")}
    card1TitleKey="SACRED_CIRCLE_CARD_1_TITLE"
    card1Desc={t(tr, "SACRED_CIRCLE_CARD_1_DESC")}
    card1DescKey="SACRED_CIRCLE_CARD_1_DESC"
    card2Title={t(tr, "SACRED_CIRCLE_CARD_2_TITLE")}
    card2TitleKey="SACRED_CIRCLE_CARD_2_TITLE"
    card2Desc={t(tr, "SACRED_CIRCLE_CARD_2_DESC")}
    card2DescKey="SACRED_CIRCLE_CARD_2_DESC"
    card3Title={t(tr, "SACRED_CIRCLE_CARD_3_TITLE")}
    card3TitleKey="SACRED_CIRCLE_CARD_3_TITLE"
    card3Desc={t(tr, "SACRED_CIRCLE_CARD_3_DESC")}
    card3DescKey="SACRED_CIRCLE_CARD_3_DESC"
    card4Title={t(tr, "SACRED_CIRCLE_CARD_4_TITLE")}
    card4TitleKey="SACRED_CIRCLE_CARD_4_TITLE"
    card4Desc={t(tr, "SACRED_CIRCLE_CARD_4_DESC")}
    card4DescKey="SACRED_CIRCLE_CARD_4_DESC"
    quote={t(tr, "SACRED_CIRCLE_QUOTE")}
    quoteKey="SACRED_CIRCLE_QUOTE"
  />

  <ConsciousnessSection
    label={t(tr, "CONSCIOUSNESS_LABEL")}
    labelKey="CONSCIOUSNESS_LABEL"
    title={t(tr, "CONSCIOUSNESS_TITLE")}
    titleKey="CONSCIOUSNESS_TITLE"
    body1={t(tr, "CONSCIOUSNESS_BODY_1")}
    body1Key="CONSCIOUSNESS_BODY_1"
    body2={t(tr, "CONSCIOUSNESS_BODY_2")}
    body2Key="CONSCIOUSNESS_BODY_2"
    body3={t(tr, "CONSCIOUSNESS_BODY_3")}
    body3Key="CONSCIOUSNESS_BODY_3"
    quote={t(tr, "CONSCIOUSNESS_QUOTE")}
    quoteKey="CONSCIOUSNESS_QUOTE"
  />

  <CrystalInterlude
    imageSrc="/helena-white-flowing-dress-dancing-great-pyramid-giza-portrait.jpg"
    objectPosition="center 20%"
    blendTopColor="depth"
    blendBottomColor="abyss"
  />

  <SacredDestinationsSection
    label={t(tr, "DESTINATIONS_LABEL")}
    labelKey="DESTINATIONS_LABEL"
    title={t(tr, "DESTINATIONS_TITLE")}
    titleKey="DESTINATIONS_TITLE"
    intro={t(tr, "DESTINATIONS_INTRO")}
    introKey="DESTINATIONS_INTRO"
    egyptName={t(tr, "DEST_EGYPT_NAME")}
    egyptNameKey="DEST_EGYPT_NAME"
    egyptTagline={t(tr, "DEST_EGYPT_TAGLINE")}
    egyptTaglineKey="DEST_EGYPT_TAGLINE"
    egyptDesc={t(tr, "DEST_EGYPT_DESC")}
    egyptDescKey="DEST_EGYPT_DESC"
    cappadociaName={t(tr, "DEST_CAPPADOCIA_NAME")}
    cappadociaNameKey="DEST_CAPPADOCIA_NAME"
    cappadociaTagline={t(tr, "DEST_CAPPADOCIA_TAGLINE")}
    cappadociaTaglineKey="DEST_CAPPADOCIA_TAGLINE"
    cappadociaDesc={t(tr, "DEST_CAPPADOCIA_DESC")}
    cappadociaDescKey="DEST_CAPPADOCIA_DESC"
    baliName={t(tr, "DEST_BALI_NAME")}
    baliNameKey="DEST_BALI_NAME"
    baliTagline={t(tr, "DEST_BALI_TAGLINE")}
    baliTaglineKey="DEST_BALI_TAGLINE"
    baliDesc={t(tr, "DEST_BALI_DESC")}
    baliDescKey="DEST_BALI_DESC"
    istanbulName={t(tr, "DEST_ISTANBUL_NAME")}
    istanbulNameKey="DEST_ISTANBUL_NAME"
    istanbulTagline={t(tr, "DEST_ISTANBUL_TAGLINE")}
    istanbulTaglineKey="DEST_ISTANBUL_TAGLINE"
    istanbulDesc={t(tr, "DEST_ISTANBUL_DESC")}
    istanbulDescKey="DEST_ISTANBUL_DESC"
  />

  <CeremonySection
    label={t(tr, "CEREMONY_LABEL")}
    labelKey="CEREMONY_LABEL"
    title={t(tr, "CEREMONY_TITLE")}
    titleKey="CEREMONY_TITLE"
    body={t(tr, "CEREMONY_BODY")}
    bodyKey="CEREMONY_BODY"
    quote={t(tr, "CEREMONY_QUOTE")}
    quoteKey="CEREMONY_QUOTE"
  />

  <CrystalInterlude
    imageSrc="/women-white-robes-ocean-sunset-ritual-drum-altar-landscape.jpg"
    objectPosition="center center"
    blendTopColor="depth"
    blendBottomColor="abyss"
  />

  <PastJourneysSection
    label={t(tr, "PAST_JOURNEYS_LABEL")}
    labelKey="PAST_JOURNEYS_LABEL"
    title={t(tr, "PAST_JOURNEYS_TITLE")}
    titleKey="PAST_JOURNEYS_TITLE"
    body={t(tr, "PAST_JOURNEYS_BODY")}
    bodyKey="PAST_JOURNEYS_BODY"
    stat={t(tr, "PAST_JOURNEYS_STAT")}
    statKey="PAST_JOURNEYS_STAT"
  />

  <MonthlyCircleSection
    label={t(tr, "MONTHLY_CIRCLE_LABEL")}
    labelKey="MONTHLY_CIRCLE_LABEL"
    title={t(tr, "MONTHLY_CIRCLE_TITLE")}
    titleKey="MONTHLY_CIRCLE_TITLE"
    body1={t(tr, "MONTHLY_CIRCLE_BODY_1")}
    body1Key="MONTHLY_CIRCLE_BODY_1"
    body2={t(tr, "MONTHLY_CIRCLE_BODY_2")}
    body2Key="MONTHLY_CIRCLE_BODY_2"
    card1Title={t(tr, "MONTHLY_CIRCLE_CARD_1_TITLE")}
    card1TitleKey="MONTHLY_CIRCLE_CARD_1_TITLE"
    card1Desc={t(tr, "MONTHLY_CIRCLE_CARD_1_DESC")}
    card1DescKey="MONTHLY_CIRCLE_CARD_1_DESC"
    card2Title={t(tr, "MONTHLY_CIRCLE_CARD_2_TITLE")}
    card2TitleKey="MONTHLY_CIRCLE_CARD_2_TITLE"
    card2Desc={t(tr, "MONTHLY_CIRCLE_CARD_2_DESC")}
    card2DescKey="MONTHLY_CIRCLE_CARD_2_DESC"
    card3Title={t(tr, "MONTHLY_CIRCLE_CARD_3_TITLE")}
    card3TitleKey="MONTHLY_CIRCLE_CARD_3_TITLE"
    card3Desc={t(tr, "MONTHLY_CIRCLE_CARD_3_DESC")}
    card3DescKey="MONTHLY_CIRCLE_CARD_3_DESC"
    ctaText={t(tr, "CTA_SUBSCRIBE")}
    ctaTextKey="CTA_SUBSCRIBE"
  />

  <JoinInPersonSection
    label={t(tr, "JOIN_LABEL")}
    labelKey="JOIN_LABEL"
    title={t(tr, "JOIN_TITLE")}
    titleKey="JOIN_TITLE"
    body1={t(tr, "JOIN_BODY_1")}
    body1Key="JOIN_BODY_1"
    body2={t(tr, "JOIN_BODY_2")}
    body2Key="JOIN_BODY_2"
    body3={t(tr, "JOIN_BODY_3")}
    body3Key="JOIN_BODY_3"
    ctaText={t(tr, "CTA_SUBSCRIBE")}
    ctaTextKey="CTA_SUBSCRIBE"
  />

  <FinalCTASection
    label={t(tr, "FINAL_CTA_LABEL")}
    labelKey="FINAL_CTA_LABEL"
    title={t(tr, "FINAL_CTA_TITLE")}
    titleKey="FINAL_CTA_TITLE"
    body={t(tr, "FINAL_CTA_BODY")}
    bodyKey="FINAL_CTA_BODY"
    price={t(tr, "FINAL_CTA_PRICE")}
    priceKey="FINAL_CTA_PRICE"
    ctaText={t(tr, "CTA_SUBSCRIBE")}
    ctaTextKey="CTA_SUBSCRIBE"
  />
</BaseLayout>
