---
import BaseLayout from "../layouts/BaseLayout.astro";
import SparkleCanvas from "../components/SparkleCanvas.astro";
import SacredGeometry from "../components/SacredGeometry.astro";
import HeroSection from "../components/sections/HeroSection.astro";
import PilgrimageSection from "../components/sections/PilgrimageSection.astro";
import CrystalInterlude from "../components/sections/CrystalInterlude.astro";
import SacredCircleSection from "../components/sections/SacredCircleSection.astro";
import ConsciousnessSection from "../components/sections/ConsciousnessSection.astro";
import SacredDestinationsSection from "../components/sections/SacredDestinationsSection.astro";
import CeremonySection from "../components/sections/CeremonySection.astro";
import PastJourneysSection from "../components/sections/PastJourneysSection.astro";
import MonthlyCircleSection from "../components/sections/MonthlyCircleSection.astro";
import JoinInPersonSection from "../components/sections/JoinInPersonSection.astro";
import FinalCTASection from "../components/sections/FinalCTASection.astro";
---

<BaseLayout>
  <SacredGeometry />
  <SparkleCanvas />
  <HeroSection />
  <PilgrimageSection />
  <CrystalInterlude
    imageSrc="/helena-white-dress-amethyst-crystal-ocean-beach.jpg"
    objectPosition="center 35%"
    blendTopColor="depth"
    blendBottomColor="abyss"
  />
  <SacredCircleSection />
  <ConsciousnessSection />
  <CrystalInterlude
    imageSrc="/helena-white-flowing-dress-dancing-great-pyramid-giza-portrait.jpg"
    objectPosition="center 40%"
    blendTopColor="depth"
    blendBottomColor="abyss"
  />
  <SacredDestinationsSection />
  <CeremonySection />
  <CrystalInterlude
    imageSrc="/helena-pink-robe-namaste-pose-great-sphinx-giza-portrait.jpeg"
    objectPosition="center 30%"
    blendTopColor="depth"
    blendBottomColor="abyss"
  />
  <PastJourneysSection />
  <MonthlyCircleSection />
  <JoinInPersonSection />
  <FinalCTASection />
</BaseLayout>
