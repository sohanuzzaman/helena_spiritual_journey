---
import type { Locale } from "../i18n/ui";
import LanguageSwitcher from "../components/LanguageSwitcher.astro";
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  lang?: Locale;
  skipToContent?: string;
  footerCopyright?: string;
  skipToContentKey?: string;
  footerCopyrightKey?: string;
}

const {
  title = "Helena Houdova — Sacred Pilgrimage Journey | Subscribe",
  description = "Follow Helena Houdova\u2019s pilgrimage to the world\u2019s most sacred sites. Subscribe for intimate access to ceremonies, transmissions, and ancient wisdom — with select opportunities to join in person.",
  lang = "en",
  skipToContent = "Skip to content",
  footerCopyright = "Helena Houdova. All rights reserved.",
  skipToContentKey,
  footerCopyrightKey,
} = Astro.props;

const canonicalBase = Astro.site?.origin ?? Astro.url.origin;
const canonicalUrl = `${canonicalBase}/${lang}/`;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Canonical & hreflang -->
    <link rel="canonical" href={canonicalUrl} />
    <link rel="alternate" hreflang="en" href={`${canonicalBase}/en/`} />
    <link rel="alternate" hreflang="cs" href={`${canonicalBase}/cs/`} />
    <link rel="alternate" hreflang="x-default" href={`${canonicalBase}/en/`} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content={lang === "cs" ? "cs_CZ" : "en_US"} />
    <meta property="og:locale:alternate" content={lang === "cs" ? "en_US" : "cs_CZ"} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;0,700;1,400&family=Cormorant+Unicase:wght@500&family=Raleway:wght@300;400;500&display=swap"
      rel="stylesheet"
    />

    <!-- Styles -->
    <title>{title}</title>
  </head>
  <body>
    <!-- Skip to content -->
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only fixed top-4 left-4 z-[10000] rounded-md bg-purple-deep px-4 py-2 font-body text-gold-solar no-underline"
      {...(skipToContentKey ? { "data-t": skipToContentKey } : {})}
    >
      {skipToContent}
    </a>

    <LanguageSwitcher currentLocale={lang} />

    <main id="main-content">
      <slot />
    </main>

    <footer class="py-8 text-center text-sm text-moonstone bg-abyss">
      <p {...(footerCopyrightKey ? { "data-t": footerCopyrightKey } : {})}>&copy; {new Date().getFullYear()} {footerCopyright}</p>
    </footer>

    <!-- Scroll reveal observer -->
    <script>
      if (!window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
        const reveals = document.querySelectorAll('.reveal');
        const observer = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                const delay = entry.target.getAttribute('data-reveal-delay');
                if (delay !== null) {
                  (entry.target as HTMLElement).style.transitionDelay = `${parseInt(delay) * 100}ms`;
                }
                entry.target.classList.add('is-visible');
                observer.unobserve(entry.target);
              }
            });
          },
          { threshold: 0.15 }
        );
        reveals.forEach((el) => observer.observe(el));
      }
    </script>

    <!-- Client-side UILM translation hydration -->
    <script is:inline>
      (function () {
        var PROJECT_KEY = "P43335b928ba643959d9755c542239a1d";
        var API_BASE = "https://api.seliseblocks.com";

        // Store project key for UILM Chrome extension
        try { localStorage.setItem("uilm_project_key", PROJECT_KEY); } catch (e) {}

        var lang = document.documentElement.lang || "en";
        var cultureMap = { en: "en-US", cs: "cs-CZ" };
        var culture = cultureMap[lang] || "en-US";

        var url = API_BASE + "/uilm/v1/Key/GetUilmFile?Language=" + encodeURIComponent(culture) + "&ModuleName=common&ProjectKey=" + encodeURIComponent(PROJECT_KEY);

        fetch(url, {
          headers: { "x-blocks-key": PROJECT_KEY },
        })
          .then(function (res) {
            if (!res.ok) {
              console.warn("[UILM] API returned status " + res.status);
              throw new Error("HTTP " + res.status);
            }
            return res.json();
          })
          .then(function (data) {
            var keys = Object.keys(data);
            var updated = 0;
            for (var i = 0; i < keys.length; i++) {
              var key = keys[i];
              var value = data[key];
              if (typeof value !== "string" || !value) continue;
              var elements = document.querySelectorAll('[data-t="' + key + '"]');
              for (var j = 0; j < elements.length; j++) {
                elements[j].textContent = value;
                updated++;
              }
            }
            console.log("[UILM] Updated " + updated + " elements from " + keys.length + " keys (" + culture + ")");

            // Update document title and meta description
            if (data["META_PAGE_TITLE"]) {
              document.title = data["META_PAGE_TITLE"];
            }
            var metaDesc = document.querySelector('meta[name="description"]');
            if (metaDesc && data["META_PAGE_DESCRIPTION"]) {
              metaDesc.setAttribute("content", data["META_PAGE_DESCRIPTION"]);
            }
          })
          .catch(function (err) {
            console.warn("[UILM] Failed to load translations:", err);
          });
      })();
    </script>
  </body>
</html>
