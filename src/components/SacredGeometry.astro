---
// Ambient, reactive sacred geometry symbols for the Opulent Lemurian background
---

<div
    id="sacred-geometry-container"
    class="fixed inset-0 z-[0] pointer-events-none overflow-hidden"
    aria-hidden="true"
>
    <!-- Symbol 1: Seed of Life / Lemurian Star -->
    <svg
        class="sacred-symbol absolute top-[20%] left-[5%] md:left-[10%] w-64 h-64 md:w-96 md:h-96 text-gold-solar opacity-[0.03]"
        viewBox="0 0 100 100"
        fill="none"
        stroke="currentColor"
        stroke-width="0.3"
    >
        <circle cx="50" cy="50" r="40"></circle>
        <circle cx="50" cy="20" r="20"></circle>
        <circle cx="50" cy="80" r="20"></circle>
        <circle cx="24" cy="35" r="20"></circle>
        <circle cx="76" cy="35" r="20"></circle>
        <circle cx="24" cy="65" r="20"></circle>
        <circle cx="76" cy="65" r="20"></circle>
    </svg>

    <!-- Symbol 2: Golden Spiral / Ascended Eye -->
    <svg
        class="sacred-symbol absolute top-[60%] right-[0%] md:right-[5%] w-80 h-80 md:w-[600px] md:h-[600px] text-purple-orchid opacity-[0.03]"
        viewBox="0 0 100 100"
        fill="none"
        stroke="currentColor"
        stroke-width="0.2"
    >
        <path
            d="M50,10 A40,40 0 1,1 10,50 A30,30 0 1,1 40,20 A20,20 0 1,1 60,40 A10,10 0 1,1 50,50"
        ></path>
        <circle cx="50" cy="50" r="1.5" fill="currentColor"></circle>
        <circle cx="50" cy="50" r="48" stroke-dasharray="2 4" stroke-width="0.5"
        ></circle>
    </svg>

    <!-- Symbol 3: Lemurian Diamond Matrix -->
    <svg
        class="sacred-symbol absolute bottom-[-10%] left-[20%] w-56 h-56 md:w-80 md:h-80 text-gold-warm opacity-[0.03]"
        viewBox="0 0 100 100"
        fill="none"
        stroke="currentColor"
        stroke-width="0.4"
    >
        <polygon points="50,5 95,50 50,95 5,50"></polygon>
        <polygon points="50,20 80,50 50,80 20,50"></polygon>
        <line x1="50" y1="5" x2="50" y2="95"></line>
        <line x1="5" y1="50" x2="95" y2="50"></line>
        <circle cx="50" cy="50" r="10"></circle>
    </svg>

    <!-- Symbol 4: Amethyst Merkaba -->
    <svg
        class="sacred-symbol absolute top-[10%] right-[20%] w-40 h-40 text-purple-violet opacity-[0.03]"
        viewBox="0 0 100 100"
        fill="none"
        stroke="currentColor"
        stroke-width="0.5"
    >
        <polygon points="50,10 85,75 15,75"></polygon>
        <polygon points="50,90 15,25 85,25"></polygon>
        <circle cx="50" cy="50" r="30" stroke-dasharray="1 3"></circle>
    </svg>
</div>

<script>
    if (!window.matchMedia("(prefers-reduced-motion: reduce)").matches) {
        const symbols = document.querySelectorAll(
            ".sacred-symbol"
        ) as NodeListOf<HTMLElement>;
        let mouseX = 0;
        let mouseY = 0;
        let scrollY = window.scrollY;
        let targetX = 0;
        let targetY = 0;

        window.addEventListener("mousemove", (e) => {
            targetX = (e.clientX / window.innerWidth - 0.5) * 50; // max 25px offset
            targetY = (e.clientY / window.innerHeight - 0.5) * 50;
        });

        window.addEventListener(
            "scroll",
            () => {
                scrollY = window.scrollY;
            },
            { passive: true }
        );

        function animate() {
            // Smooth dampening for mouse
            mouseX += (targetX - mouseX) * 0.05;
            mouseY += (targetY - mouseY) * 0.05;

            symbols.forEach((el, index) => {
                // Varying speed and directions for visual depth
                const depth = index * 0.3 + 0.4; // 0.4 to 1.3
                const scrollOffset = scrollY * 0.03 * depth;
                const rotateSpeed =
                    (index % 2 === 0 ? 1 : -1) * (0.01 * (index + 1));
                const rotation = (Date.now() * rotateSpeed) % 360;

                el.style.transform = `translate3d(${mouseX * depth}px, ${
                    mouseY * depth - scrollOffset
                }px, 0) rotate(${rotation}deg)`;
            });

            requestAnimationFrame(animate);
        }

        animate();
    }
</script>

<style>
    .sacred-symbol {
        will-change: transform;
        filter: drop-shadow(0 0 15px currentColor);
    }
</style>
