---
import SectionHeader from "../SectionHeader.astro";
import ImageFeatureCard from "../ImageFeatureCard.astro";
import QuoteBlock from "../QuoteBlock.astro";

interface Props {
  label: string;
  title: string;
  card1Title: string;
  card1Desc: string;
  card2Title: string;
  card2Desc: string;
  card3Title: string;
  card3Desc: string;
  card4Title: string;
  card4Desc: string;
  quote: string;
}

const {
  label, title,
  card1Title, card1Desc,
  card2Title, card2Desc,
  card3Title, card3Desc,
  card4Title, card4Desc,
  quote,
} = Astro.props;
---

<section
  class="relative bg-abyss py-16 md:py-24 lg:py-32 overflow-hidden"
  aria-labelledby="sacred-circle-title"
>
  <!-- Atmospheric radial gradient dome - Lemurian Amethyst -->
  <div
    class="absolute inset-0 bg-[radial-gradient(ellipse_at_top_center,_rgba(156,39,176,0.12)_0%,_rgba(255,215,0,0.05)_50%,_transparent_80%)]"
    aria-hidden="true"
  >
  </div>

  <!-- Ambient purple glow orb behind card grid -->
  <div
    class="glow-orb w-[600px] h-[600px] bg-purple-violet/[0.15] top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2"
    aria-hidden="true"
  >
  </div>

  <div class="relative z-[1] max-w-[960px] mx-auto px-6">
    <div class="reveal">
      <SectionHeader
        label={label}
        title={title}
        id="sacred-circle-title"
      />
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12">
      <div class="reveal">
        <ImageFeatureCard
          title={card1Title}
          description={card1Desc}
          imageSrc="/helena-pink-robe-namaste-pose-great-sphinx-giza-portrait.jpeg"
          imageAlt="Helena reaching toward shaft of light in Egyptian temple"
        />
      </div>
      <div class="reveal">
        <ImageFeatureCard
          title={card2Title}
          description={card2Desc}
          imageSrc="/helena-red-sandstone-cave-meditation-singing-bowl-flowers-portrait.jpeg"
          imageAlt="Helena meditating with singing bowl in red sandstone cave"
        />
      </div>
      <div class="reveal">
        <ImageFeatureCard
          title={card3Title}
          description={card3Desc}
          imageSrc="/helena-floral-dress-eroded-sandstone-rock-formation-cappadocia-portrait.jpeg"
          imageAlt="Helena in floral dress at eroded sandstone rock formation in Cappadocia"
        />
      </div>
      <div class="reveal">
        <ImageFeatureCard
          title={card4Title}
          description={card4Desc}
          imageSrc="/spiritual-group-guided-tour-philae-temple-egypt-landscape.jpeg"
          imageAlt="Spiritual group guided tour at Philae Temple in Egypt"
        />
      </div>
    </div>

    <div class="reveal">
      <QuoteBlock quote={quote} />
    </div>
  </div>
</section>
