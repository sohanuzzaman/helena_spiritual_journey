---
import SectionHeader from "../SectionHeader.astro";
import ImagePair from "../ImagePair.astro";
import QuoteBlock from "../QuoteBlock.astro";

interface Props {
  label: string;
  title: string;
  body1: string;
  body2: string;
  body3: string;
  quote: string;
  labelKey?: string;
  titleKey?: string;
  body1Key?: string;
  body2Key?: string;
  body3Key?: string;
  quoteKey?: string;
}

const { label, title, body1, body2, body3, quote, labelKey, titleKey, body1Key, body2Key, body3Key, quoteKey } = Astro.props;
---

<section
  class="relative bg-depth py-16 md:py-24 lg:py-32 overflow-hidden"
  aria-labelledby="consciousness-title"
>
  <!-- Atmospheric radial gradient dome -->
  <div
    class="absolute inset-0 bg-[radial-gradient(ellipse_at_top_center,_rgba(255,215,0,0.1)_0%,_rgba(156,39,176,0.15)_40%,_transparent_70%)]"
    aria-hidden="true"
  >
  </div>

  <!-- Ambient glow orb -->
  <div
    class="glow-orb w-[500px] h-[500px] bg-purple-orchid/10 top-1/3 left-1/2 -translate-x-1/2 -translate-y-1/2"
    aria-hidden="true"
  >
  </div>

  <div class="relative z-[1] max-w-[680px] mx-auto px-6">
    <div class="reveal">
      <SectionHeader
        label={label}
        title={title}
        id="consciousness-title"
        labelKey={labelKey}
        titleKey={titleKey}
      />
    </div>

    <div class="reveal mt-12">
      <div class="image-treated">
        <img
          src="/helena-blue-dress-shaft-of-light-egyptian-temple-corridor-portrait.jpeg"
          alt="Helena in blue dress standing in a shaft of light inside an Egyptian temple corridor"
          loading="lazy"
          decoding="async"
          class="w-full h-auto block rounded-lg"
        />
      </div>
    </div>

    <div class="reveal space-y-6 mt-12">
      <p {...(body1Key ? { "data-t": body1Key } : {})}>{body1}</p>
      <p {...(body2Key ? { "data-t": body2Key } : {})}>{body2}</p>
      <p {...(body3Key ? { "data-t": body3Key } : {})}>{body3}</p>
    </div>

    <div class="reveal mt-12">
      <ImagePair
        image1={{
          src: "/crystal-gemstone-altar-gold-vase-desert-sand-dunes-portrait.jpeg",
          alt: "Crystal gemstones and gold vase altar in desert sand dunes",
        }}
        image2={{
          src: "/colorful-raw-crystals-collection-ocean-rocks-closeup-landscape.jpeg",
          alt: "Collection of colorful raw crystals on ocean rocks",
        }}
        layout="equal"
      />
    </div>

    <div class="reveal">
      <QuoteBlock quote={quote} quoteKey={quoteKey} />
    </div>
  </div>
</section>
