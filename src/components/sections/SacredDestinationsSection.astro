---
import SectionHeader from "../SectionHeader.astro";
import DestinationCard from "../DestinationCard.astro";

interface Props {
  label: string;
  title: string;
  intro: string;
  egyptName: string;
  egyptTagline: string;
  egyptDesc: string;
  cappadociaName: string;
  cappadociaTagline: string;
  cappadociaDesc: string;
  baliName: string;
  baliTagline: string;
  baliDesc: string;
  istanbulName: string;
  istanbulTagline: string;
  istanbulDesc: string;
  labelKey?: string;
  titleKey?: string;
  introKey?: string;
  egyptNameKey?: string;
  egyptTaglineKey?: string;
  egyptDescKey?: string;
  cappadociaNameKey?: string;
  cappadociaTaglineKey?: string;
  cappadociaDescKey?: string;
  baliNameKey?: string;
  baliTaglineKey?: string;
  baliDescKey?: string;
  istanbulNameKey?: string;
  istanbulTaglineKey?: string;
  istanbulDescKey?: string;
}

const {
  label, title, intro,
  egyptName, egyptTagline, egyptDesc,
  cappadociaName, cappadociaTagline, cappadociaDesc,
  baliName, baliTagline, baliDesc,
  istanbulName, istanbulTagline, istanbulDesc,
  labelKey, titleKey, introKey,
  egyptNameKey, egyptTaglineKey, egyptDescKey,
  cappadociaNameKey, cappadociaTaglineKey, cappadociaDescKey,
  baliNameKey, baliTaglineKey, baliDescKey,
  istanbulNameKey, istanbulTaglineKey, istanbulDescKey,
} = Astro.props;
---

<section
  class="relative bg-abyss py-16 md:py-24 lg:py-32 overflow-hidden"
  aria-labelledby="destinations-title"
>
  <!-- Atmospheric radial gradient dome -->
  <div
    class="absolute inset-0 bg-[radial-gradient(ellipse_at_top_center,_rgba(156,39,176,0.12)_0%,_rgba(255,215,0,0.06)_50%,_transparent_80%)]"
    aria-hidden="true"
  >
  </div>

  <!-- Ambient glow orb -->
  <div
    class="glow-orb w-[600px] h-[600px] bg-purple-violet/[0.12] top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2"
    aria-hidden="true"
  >
  </div>

  <div class="relative z-[1] max-w-[960px] mx-auto px-6">
    <div class="reveal">
      <SectionHeader
        label={label}
        title={title}
        id="destinations-title"
        labelKey={labelKey}
        titleKey={titleKey}
      />
    </div>

    <div class="reveal mb-12 max-w-[680px] mx-auto text-center">
      <p {...(introKey ? { "data-t": introKey } : {})}>{intro}</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div class="reveal">
        <DestinationCard
          name={egyptName}
          tagline={egyptTagline}
          description={egyptDesc}
          primaryImage={{
            src: "/great-pyramid-giza-night-crescent-moon-dark-sky-portrait.jpeg",
            alt: "Great Pyramid of Giza under night sky with crescent moon",
          }}
          secondaryImage={{
            src: "/helena-reaching-shaft-of-light-egyptian-temple-hieroglyphics-portrait.jpeg",
            alt: "Helena in pink robe in namaste pose before the Great Sphinx",
          }}
          nameKey={egyptNameKey}
          taglineKey={egyptTaglineKey}
          descKey={egyptDescKey}
        />
      </div>
      <div class="reveal">
        <DestinationCard
          name={cappadociaName}
          tagline={cappadociaTagline}
          description={cappadociaDesc}
          primaryImage={{
            src: "/hot-air-balloons-cappadocia-valleys-sunrise-aerial-landscape.jpeg",
            alt: "Hot air balloons over Cappadocia valleys at sunrise",
          }}
          secondaryImage={{
            src: "/helena-pink-dress-ancient-cave-rock-formation-cappadocia-portrait.jpeg",
            alt: "Helena in pink dress at ancient cave rock formation in Cappadocia",
          }}
          nameKey={cappadociaNameKey}
          taglineKey={cappadociaTaglineKey}
          descKey={cappadociaDescKey}
        />
      </div>
      <div class="reveal">
        <DestinationCard
          name={baliName}
          tagline={baliTagline}
          description={baliDesc}
          primaryImage={{
            src: "/helena-white-dress-arms-raised-waterfall-bali-portrait.jpg",
            alt: "Helena in white dress with arms raised at a waterfall in Bali",
          }}
          secondaryImage={{
            src: "/helena-white-dress-crystal-singing-bowl-waterfall-bali-portrait.jpg",
            alt: "Helena with crystal singing bowl near waterfall in Bali",
          }}
          nameKey={baliNameKey}
          taglineKey={baliTaglineKey}
          descKey={baliDescKey}
        />
      </div>
      <div class="reveal">
        <DestinationCard
          name={istanbulName}
          tagline={istanbulTagline}
          description={istanbulDesc}
          primaryImage={{
            src: "/basilica-cistern-istanbul-ancient-columns-water-reflection-portrait.jpeg",
            alt: "Basilica Cistern in Istanbul with ancient columns reflected in water",
          }}
          secondaryImage={{
            src: "/ancient-rock-art-petroglyphs-red-stone-cliff-portrait.jpeg",
            alt: "Ancient rock art petroglyphs on red stone cliff",
          }}
          nameKey={istanbulNameKey}
          taglineKey={istanbulTaglineKey}
          descKey={istanbulDescKey}
        />
      </div>
    </div>
  </div>
</section>
