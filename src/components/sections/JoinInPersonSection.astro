---
import SectionHeader from "../SectionHeader.astro";
import ImagePair from "../ImagePair.astro";
import CTAButton from "../CTAButton.astro";

interface Props {
  label: string;
  title: string;
  body1: string;
  body2: string;
  body3: string;
  ctaText: string;
  labelKey?: string;
  titleKey?: string;
  body1Key?: string;
  body2Key?: string;
  body3Key?: string;
  ctaTextKey?: string;
}

const { label, title, body1, body2, body3, ctaText, labelKey, titleKey, body1Key, body2Key, body3Key, ctaTextKey } = Astro.props;
---

<section
  class="relative bg-depth py-16 md:py-24 lg:py-32 overflow-hidden"
  aria-labelledby="join-title"
>
  <!-- Atmospheric radial gradient dome - Deep Lemurian Glow -->
  <div
    class="absolute inset-0 bg-[radial-gradient(ellipse_at_top_center,_rgba(255,215,0,0.1)_0%,_rgba(156,39,176,0.1)_40%,_transparent_70%)]"
    aria-hidden="true"
  >
  </div>

  <div class="relative z-[1] max-w-[680px] mx-auto px-6">
    <div class="reveal">
      <SectionHeader
        label={label}
        title={title}
        id="join-title"
        labelKey={labelKey}
        titleKey={titleKey}
      />
    </div>

    <div class="reveal space-y-6">
      <p {...(body1Key ? { "data-t": body1Key } : {})}>{body1}</p>
      <p {...(body2Key ? { "data-t": body2Key } : {})}>{body2}</p>
      <p {...(body3Key ? { "data-t": body3Key } : {})}>{body3}</p>
    </div>

    <div class="reveal mt-12">
      <div class="image-treated">
        <img
          src="/helena-leading-spiritual-group-walk-egypt-temple.jpeg"
          alt="Helena leading a spiritual group walk at an Egyptian temple"
          loading="lazy"
          decoding="async"
          class="w-full h-auto block rounded-lg"
        />
      </div>
    </div>

    <div class="reveal mt-12">
      <ImagePair
        image1={{
          src: "/two-women-cave-entrance-rocky-desert-landscape-portrait.jpeg",
          alt: "Two women at cave entrance in rocky desert landscape",
        }}
        image2={{
          src: "/person-cave-entrance-night-dog-city-lights-portrait.jpeg",
          alt: "Person at cave entrance at night with city lights below",
        }}
        layout="equal"
      />
    </div>

    <div class="reveal mt-12 text-center">
      <CTAButton
        href="https://www.instagram.com/"
        text={ctaText}
        textKey={ctaTextKey}
      />
    </div>
  </div>
</section>
