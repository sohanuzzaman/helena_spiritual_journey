---
import SectionHeader from "../SectionHeader.astro";
import FeatureCard from "../FeatureCard.astro";
import ImagePair from "../ImagePair.astro";
import CTAButton from "../CTAButton.astro";

interface Props {
  label: string;
  title: string;
  body1: string;
  body2: string;
  card1Title: string;
  card1Desc: string;
  card2Title: string;
  card2Desc: string;
  card3Title: string;
  card3Desc: string;
  ctaText: string;
}

const {
  label, title, body1, body2,
  card1Title, card1Desc,
  card2Title, card2Desc,
  card3Title, card3Desc,
  ctaText,
} = Astro.props;
---

<section
  class="relative bg-depth py-16 md:py-24 lg:py-32 overflow-hidden"
  aria-labelledby="monthly-circle-title"
>
  <!-- Atmospheric radial gradient dome -->
  <div
    class="absolute inset-0 bg-[radial-gradient(ellipse_at_top_center,_rgba(255,215,0,0.08)_0%,_rgba(156,39,176,0.12)_40%,_transparent_70%)]"
    aria-hidden="true"
  >
  </div>

  <!-- Ambient glow orb -->
  <div
    class="glow-orb w-[500px] h-[500px] bg-purple-orchid/10 top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2"
    aria-hidden="true"
  >
  </div>

  <div class="relative z-[1] max-w-[960px] mx-auto px-6">
    <div class="reveal">
      <SectionHeader
        label={label}
        title={title}
        id="monthly-circle-title"
      />
    </div>

    <div class="reveal space-y-6 max-w-[680px] mx-auto mb-12">
      <p>{body1}</p>
      <p>{body2}</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
      <div class="reveal">
        <FeatureCard
          title={card1Title}
          description={card1Desc}
        />
      </div>
      <div class="reveal">
        <FeatureCard
          title={card2Title}
          description={card2Desc}
        />
      </div>
      <div class="reveal">
        <FeatureCard
          title={card3Title}
          description={card3Desc}
        />
      </div>
    </div>

    <div class="reveal mb-12 max-w-[680px] mx-auto">
      <ImagePair
        image1={{
          src: "/helena-pink-veil-bindi-smiling-stone-wall-portrait.jpg",
          alt: "Helena wearing pink veil and bindi, smiling by stone wall",
        }}
        image2={{
          src: "/helena-smiling-through-hole-ancient-mud-brick-wall-portrait.jpeg",
          alt: "Helena smiling through hole in ancient mud brick wall",
        }}
        layout="equal"
      />
    </div>

    <div class="reveal">
      <div class="image-treated max-w-[680px] mx-auto">
        <img
          src="/women-white-dresses-raising-arms-rock-canyon-path-portrait.jpeg"
          alt="Women in white dresses raising arms on rock canyon path"
          loading="lazy"
          decoding="async"
          class="w-full h-auto block rounded-lg"
        />
      </div>
    </div>

    <div class="reveal mt-12 text-center">
      <CTAButton
        href="https://www.instagram.com/"
        text={ctaText}
      />
    </div>
  </div>
</section>
