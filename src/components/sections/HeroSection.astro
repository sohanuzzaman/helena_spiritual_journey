---
import CTAButton from "../CTAButton.astro";

interface Props {
  label: string;
  headline: string;
  subheadline: string;
  ctaText: string;
}

const { label, headline, subheadline, ctaText } = Astro.props;
---

<section
  class="hero relative min-h-screen flex items-center justify-center bg-abyss overflow-hidden"
  aria-label="Hero"
>
  <!-- Background image -->
  <img
    src="/helena-kneeling-prayer-ancient-egyptian-temple-arch-nile-sunset.jpeg"
    alt=""
    fetchpriority="high"
    decoding="async"
    class="absolute inset-0 w-full h-full object-cover"
  />

  <!-- Dark gradient overlay - Richer abyss -->
  <div
    class="absolute inset-0 bg-gradient-to-b from-abyss/40 via-purple-deep/20 to-abyss/90"
    aria-hidden="true"
  >
  </div>

  <!-- Radial gold-purple glow â€” light filtering up through temple -->
  <div
    class="absolute inset-0 bg-[radial-gradient(ellipse_at_center_bottom,_rgba(255,215,0,0.15)_0%,_rgba(156,39,176,0.15)_40%,_transparent_70%)]"
    aria-hidden="true"
  >
  </div>

  <!-- Ambient gold & purple glow orb behind headline -->
  <div
    class="glow-orb w-[500px] h-[500px] bg-purple-orchid/15 top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2"
    aria-hidden="true"
  >
  </div>
  <div
    class="glow-orb w-[300px] h-[300px] bg-gold-solar/15 top-[60%] left-1/2 -translate-x-1/2 -translate-y-1/2"
    aria-hidden="true"
  >
  </div>

  <!-- Content -->
  <div class="relative z-10 text-center px-6 max-w-[680px]">
    <div class="reveal">
      <p
        class="font-accent font-medium text-[0.875rem] tracking-[0.2em] uppercase text-gold-solar mb-6"
      >
        {label}
      </p>
    </div>

    <div class="reveal">
      <h1
        class="text-gold-gradient font-heading font-normal leading-[1.05] mb-8"
        style="font-size: clamp(3rem, 8vw, 6rem);"
      >
        {headline}
      </h1>
    </div>

    <div class="reveal">
      <p
        class="text-pearl-white text-lg leading-relaxed mb-10 max-w-[680px] mx-auto"
      >
        {subheadline}
      </p>
    </div>

    <div class="reveal">
      <CTAButton
        href="https://www.instagram.com/"
        text={ctaText}
        animated={true}
      />
    </div>
  </div>
</section>
