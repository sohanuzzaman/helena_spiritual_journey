---
import SectionHeader from "../SectionHeader.astro";
import ImagePair from "../ImagePair.astro";

interface Props {
  label: string;
  title: string;
  body1: string;
  body2: string;
  body3: string;
  labelKey?: string;
  titleKey?: string;
  body1Key?: string;
  body2Key?: string;
  body3Key?: string;
}

const { label, title, body1, body2, body3, labelKey, titleKey, body1Key, body2Key, body3Key } = Astro.props;
---

<section
  class="relative bg-depth py-16 md:py-24 lg:py-32 overflow-hidden"
  aria-labelledby="pilgrimage-title"
>
  <!-- Atmospheric radial gradient dome - Lemurian Purple Glow -->
  <div
    class="absolute inset-0 bg-[radial-gradient(ellipse_at_top_center,_rgba(156,39,176,0.15)_0%,_rgba(255,215,0,0.05)_40%,_transparent_70%)]"
    aria-hidden="true"
  >
  </div>

  <div class="relative z-[1] max-w-[680px] mx-auto px-6">
    <div class="reveal">
      <SectionHeader
        label={label}
        title={title}
        id="pilgrimage-title"
        labelKey={labelKey}
        titleKey={titleKey}
      />
    </div>

    <div class="reveal space-y-6">
      <p {...(body1Key ? { "data-t": body1Key } : {})}>{body1}</p>
      <p {...(body2Key ? { "data-t": body2Key } : {})}>{body2}</p>
      <p {...(body3Key ? { "data-t": body3Key } : {})}>{body3}</p>
    </div>

    <div class="reveal mt-12">
      <div class="image-treated">
        <img
          src="/green-crystal-moldavite-egypt-temple-sunset-silhouettes.jpeg"
          alt="Green crystal with Egyptian temple silhouettes at sunset"
          loading="lazy"
          decoding="async"
          class="w-full h-auto block rounded-lg"
        />
      </div>
    </div>

    <div class="reveal mt-12">
      <ImagePair
        image1={{
          src: "/helena-peach-dress-walking-desert-ancient-tree-portrait.jpg",
          alt: "Helena in peach dress walking through desert near ancient tree",
        }}
        image2={{
          src: "/helena-white-dress-stone-cairn-rocky-plain-sunset-portrait.jpeg",
          alt: "Helena in white dress beside stone cairn on rocky plain at sunset",
        }}
        layout="equal"
      />
    </div>
  </div>
</section>
