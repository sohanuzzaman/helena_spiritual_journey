---
interface Props {
  quote: string;
}

const { quote } = Astro.props;
---

<blockquote class="quote-block reveal relative font-heading italic font-normal text-gold-glow border-l-0 pl-6 max-w-[680px] mx-auto my-12 leading-snug" style="font-size: clamp(1.5rem, 3vw, 2rem);">
  {quote}
</blockquote>
