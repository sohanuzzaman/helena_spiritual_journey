---
interface Props {
  href: string;
  text: string;
  animated?: boolean;
  external?: boolean;
}

const { href, text, animated = false, external = true } = Astro.props;
---

<a
  href={href}
  {...(external ? { target: "_blank", rel: "noopener noreferrer" } : {})}
  class:list={["cta-button", { "cta-button--animated": animated }]}
>
  {text}
</a>

<style>
  .cta-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 1rem 2.5rem;
    border: none;
    border-radius: 9999px;
    font-family: var(--font-body);
    font-weight: 500;
    font-size: 1rem;
    letter-spacing: 0.05em;
    color: var(--color-purple-deep);
    background: var(--gradient-gold-shimmer);
    background-size: 200% 100%;
    background-position: 0% 50%;
    box-shadow:
    box-shadow:
      0 0 25px rgba(255, 215, 0, 0.4),
      0 4px 20px rgba(106, 27, 154, 0.6),
      inset 0 0 10px rgba(255, 255, 255, 0.3);
    cursor: pointer;
    text-decoration: none;
    transition: background-position 0.6s ease-out, box-shadow 0.3s ease-out, transform 0.3s ease-out;
  }

  .cta-button:hover {
    background-position: 100% 50%;
    transform: translateY(-2px);
    box-shadow:
      0 0 40px rgba(255, 215, 0, 0.6),
      0 8px 30px rgba(106, 27, 154, 0.8),
      inset 0 0 15px rgba(255, 255, 255, 0.5);
  }

  .cta-button:active {
    background-position: 100% 50%;
    transform: translateY(1px);
    box-shadow:
      0 0 15px rgba(255, 215, 0, 0.3),
      0 2px 10px rgba(106, 27, 154, 0.5),
      inset 0 0 5px rgba(255, 255, 255, 0.2);
  }

  @media (max-width: 767px) {
    .cta-button {
      width: 100%;
    }
  }

  @media (prefers-reduced-motion: no-preference) {
    .cta-button--animated {
      animation: shimmer 4s ease-in-out infinite;
    }

    @keyframes shimmer {
      0%   { background-position: 0% 50%; }
      50%  { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }

    .cta-button:focus-visible {
      outline: none;
      animation: cta-focus-pulse 2s ease-in-out infinite;
    }

    @keyframes cta-focus-pulse {
      0%, 100% { box-shadow: 0 0 0 3px rgba(255, 215, 0, 0.4), 0 0 25px rgba(255, 215, 0, 0.4), 0 4px 20px rgba(106, 27, 154, 0.6); }
      50%      { box-shadow: 0 0 0 3px rgba(255, 215, 0, 1), 0 0 25px rgba(255, 215, 0, 0.4), 0 4px 20px rgba(106, 27, 154, 0.6); }
    }
  }
</style>
