---
interface Props {
  href: string;
  text: string;
  animated?: boolean;
}

const { href, text, animated = false } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class:list={["cta-button", { "cta-button--animated": animated }]}
>
  {text}
</a>

<style>
  .cta-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 1rem 2.5rem;
    border: none;
    border-radius: 9999px;
    font-family: var(--font-body);
    font-weight: 500;
    font-size: 1rem;
    letter-spacing: 0.05em;
    color: var(--color-purple-deep);
    background: var(--gradient-gold-shimmer);
    background-size: 200% 100%;
    background-position: 0% 50%;
    box-shadow:
      0 0 20px rgba(242, 201, 76, 0.25),
      0 4px 16px rgba(0, 0, 0, 0.3);
    cursor: pointer;
    text-decoration: none;
    transition: background-position 0.6s ease-out, box-shadow 0.3s ease-out;
  }

  .cta-button:hover {
    background-position: 100% 50%;
    box-shadow:
      0 0 30px rgba(242, 201, 76, 0.4),
      0 6px 24px rgba(0, 0, 0, 0.3);
  }

  .cta-button:active {
    background-position: 100% 50%;
    box-shadow:
      0 0 15px rgba(242, 201, 76, 0.2),
      0 2px 8px rgba(0, 0, 0, 0.3);
  }

  @media (max-width: 767px) {
    .cta-button {
      width: 100%;
    }
  }

  @media (prefers-reduced-motion: no-preference) {
    .cta-button--animated {
      animation: shimmer 4s ease-in-out infinite;
    }

    @keyframes shimmer {
      0%   { background-position: 0% 50%; }
      50%  { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }
  }
</style>
